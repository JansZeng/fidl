  sources = [
    "fuzzer.cc",
    "test.cc",
    "test.h",
  ]
  deps = [
    "//magenta/system/host/fidl:compiler",
    "//third_party/llvm/lib/Fuzzer",
  ]

  cflags = [
    "-fsanitize=address",
    "-fsanitize-coverage=trace-pc-guard",
  ]
  ldflags = cflags
}
