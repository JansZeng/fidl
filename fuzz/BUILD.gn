declare_args() {
  enable_ossfuzz = false
}

executable("fidl-fuzzer") {
  sources = [
    "fuzzer.cc",
    "test.cc",
    "test.h",
  ]
  deps = [
    "//magenta/system/host/fidl:compiler",
  ]

  cflags = [
    "-fsanitize=address",
    "-fsanitize-coverage=trace-pc-guard",
  ]

  ldflags = cflags

  if (enable_ossfuzz) {
    libs = [ "FuzzingEngine" ]
    lib_dirs = [ "/usr/lib" ]
  } else {
    deps += [ "//third_party/llvm/lib/Fuzzer" ]
  }
}
